@model LoginVM


<div class="container mt-5 pt-5">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="register-area mt-5 mb-5 pt-5" style="width:50%; margin: 0 auto;">
        <h1 class="text-center">Sign In</h1>
        <p>
            Don’t have an account?<a asp-action="SignUp" style="margin-left:10px">Create a free account</a>
        </p>
        <form method="post" asp-action="SignIn">
            <div class="form-group">
                <label for="exampleInputEmail1">Email or username</label>
                <input asp-for="EmailOrUsername" autocomplete="off" class="form-control" id="exampleInputEmail1" aria-describedy="emailHelp" />
                <span class="text-danger" asp-validation-for="EmailOrUsername"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Password</label>
                <input asp-for="Password" autocomplete="off" class="form-control" id="exampleInputEmail1" aria-describedy="emailHelp" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="button-div d-flex justify-content-center mt-3">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
            <div class="au-checkbox mt-3 mb-3">
                <a href="">Forgot password?</a>
            </div>
        </form>
    </div>
</div>