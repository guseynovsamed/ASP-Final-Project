@model SliderDetailVM


@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <div class="form-group">
        <h2><label class="col-md-12" style="font-weight:700">Slider Detail</label></h2>
        <div class="col-md-12 mt-3">
            <h3>Title:<input asp-for="Title" type="text" disabled class="form-control form-control-line" /></h3>
            <h3>Image:</h3>
            <img src="~/assets/img/@Model.Image" width="100px" height="100px" />
        </div>
    </div>

    <div class="form-group mt-3">
        <div class="col-sm-12">
            <a asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </div>
</div>
