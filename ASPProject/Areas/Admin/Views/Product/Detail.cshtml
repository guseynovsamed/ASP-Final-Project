@model ProductDetailVM


<section class="py-5">
    <div class="container">
        <div class="row gx-5">
            <aside class="col-lg-6">
                <div class="border rounded-4 mb-3 d-flex justify-content-center">
                    <a data-fslightbox="mygalley" class="rounded-4" target="_blank" data-type="image" href="https://mdbcdn.b-cdn.net/img/bootstrap-ecommerce/items/detail1/big.webp">
                        <img style="max-width: 100%; max-height: 100vh; margin: auto;" class="rounded-4 fit" src="~/assets/img/@Model.ProductImage.FirstOrDefault(m=>m.IsMain).Image" />
                    </a>
                </div>
                <div class="d-flex justify-content-center mb-3">
                    @foreach (var item in Model.ProductImage.Where(m=>!m.IsMain))
                    {
                        <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image" href="https://mdbcdn.b-cdn.net/img/bootstrap-ecommerce/items/detail1/big1.webp" class="item-thumb">
                            <img width="60" height="60" class="rounded-2" src="~/assets/img/@item.Image" />
                        </a>
                    }
                </div>
            </aside>
            <main class="col-lg-6">
                <div class="ps-lg-3">
                    <h6 class="title text-dark">
                        Name:
                        @Model.Name
                    </h6>
                    <h6 class="title text-dark">
                        Description:
                        @Model.Description
                    </h6>
                    <h6 class="title text-dark">
                        Price:
                        @Model.Price
                    </h6><h6 class="title text-dark">
                        Selling Count
                        @Model.SellingCount
                    </h6>
                    <h6 class="title text-dark">
                        Rating Count
                        @Model.RatingCount
                    </h6>
                    <h6 class="title text-dark">
                        Product Count
                        @Model.Count
                    </h6>
                    <h6 class="title text-dark">
                        Category
                        @Model.Category
                    </h6>
                </div>
                <a class="btn btn-primary" asp-controller="Product" asp-action="Index">Back</a>

            </main>
        </div>
    </div>
</section>
