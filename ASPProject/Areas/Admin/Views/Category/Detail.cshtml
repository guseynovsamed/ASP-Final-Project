@model CategoryDetailVM



<div class="container">
    <div class="form-group">
        <h2><label class="col-md-12" style="font-weight:700">Category Detail</label></h2>
        <div class="col-md-12 mt-3">
            <h3>Name:<input asp-for="Name" type="text" disabled class="form-control form-control-line" /></h3>
            @if (Model.ProductCount != 0)
            {
                <h3>Productcount: @Model.ProductCount</h3>
            }
            else
            {
               <h3>No Products Added</h3>
            }
        </div>
    </div>

    <div class="form-group mt-3">
        <div class="col-sm-12">
            <a asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </div>
</div>